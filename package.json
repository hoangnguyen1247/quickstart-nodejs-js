{
    "name": "quickstart-node-js",
    "version": "1.0.0",
    "private": true,
    "dependencies": {
        "@babel/core": "^7.8.7",
        "@babel/plugin-proposal-class-properties": "^7.8.3",
        "@babel/plugin-proposal-decorators": "^7.8.3",
        "@babel/plugin-transform-arrow-functions": "^7.8.3",
        "@babel/plugin-transform-runtime": "^7.8.3",
        "@babel/preset-env": "^7.8.7",
        "@babel/preset-flow": "^7.8.3",
        "@babel/register": "^7.8.6",
        "@babel/runtime": "^7.11.2",
        "babel-plugin-module-resolver": "^4.0.0",
        "cookie-parser": "~1.4.4",
        "cross-env": "^7.0.2",
        "debug": "~2.6.9",
        "express": "~4.16.1",
        "hbs": "~4.0.4",
        "http-errors": "~1.6.3",
        "ignore-styles": "^5.0.1",
        "moment": "^2.24.0",
        "morgan": "~1.9.1",
        "node-dependency-injection": "^2.6.2"
    },
    "devDependencies": {
        "@babel/cli": "^7.8.4",
        "@types/node": "^13.9.1",
        "husky": "^4.3.0",
        "nodemon": "^2.0.2",
        "typescript": "^4.0.3"
    },
    "scripts": {
        "start": "cross-env NODE_PATH=. NODE_ENV=local nodemon --watch 'src/**/*.js' --ignore 'src/**/*.spect.js' --exec node --inspect=127.0.0.1:9229 -r @babel/register src/main.js",
        "start:debug": "node inspect -r @babel/register",
        "typecheck": "cross-env NODE_PATH=. tsc --checkJs --noEmit",
        "build": "babel src --out-dir lib --source-maps false",
        "compile:migration": "tsc src/migration/**/*",
        "typeorm:account": "node -r @babel/register ./node_modules/typeorm/cli.js --config ./src/ormconfig/ormconfig-account.js -c account",
        "ts-node": "./node_modules/.bin/ts-node"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run typecheck"
        }
    }
}
